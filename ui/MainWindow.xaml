<Window x:Class="WpfAppOpenVr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppOpenVr"
        mc:Ignorable="d"
        Title="PoseLock Driver Controller" Height="350" Width="500" Closing="Window_Closing">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Button x:Name="RefreshButton" Content="トラッカーを再検索" Grid.Row="0" HorizontalAlignment="Left" Padding="10,5" Click="RefreshButton_Click"/>

        <ListBox x:Name="TrackerListBox" Grid.Row="1" Margin="0,10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox Content="{Binding SerialNumber}" IsChecked="{Binding IsEnabled}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="RegisterDriverButton" Content="ドライバーを登録" Padding="10,5" Click="RegisterDriverButton_Click" Margin="0,0,10,0"/>
            <Button x:Name="SaveButton" Content="設定を保存" Padding="10,5" Click="SaveButton_Click"/>
        </StackPanel>

        <TextBlock x:Name="StatusTextBlock" Grid.Row="3" Margin="0,5,0,0" />
    </Grid>
</Window>